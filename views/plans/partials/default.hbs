<div class="wrapper">
  <div class="container d-flex flex-column justify-content-center align-content-center main ">
<div class="movies-partial">
        <h4>{{plan.title}}</h4>
        <p>Creator: <a href="/profile/{{plan.creator.id}}/">{{plan.creator.username}}</a></p>
        <p>Description: {{plan.description}}</p>
        <p>Date: {{date}}</p>
        <p>Hour {{plan.hour}}</p>
        <p>Address: {{plan.address}}</p>
        <p>Assistants <span class="fas fa-users"></span> {{plan.assistants.length}}</p>
        <ul>
          {{#each plan.assistants}}
            <li><a href="/profile/{{this.id}}/">{{this.username}}</a></li>
          {{/each}}
        </ul>
        <a href="/plans/{{plan.genre}}/{{plan.subgenre}}/{{plan.id}}/join">Join</a>
      </div>

</div>